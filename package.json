{
  "name": "dod-portal",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "node scripts/test-runner.js unit",
    "test:integration": "node scripts/test-runner.js integration",
    "test:comprehensive": "node scripts/test-runner.js comprehensive",
    "test:accessibility": "node scripts/test-runner.js accessibility",
    "test:performance": "node scripts/test-runner.js performance",
    "test:all": "node scripts/test-runner.js all",
    "test:quick": "jest --testPathIgnorePatterns=comprehensive --maxWorkers=4",
    "test:ci": "jest --ci --coverage --watchAll=false --maxWorkers=2",
    "test:debug": "jest --verbose --detectOpenHandles --forceExit",
    "test:report": "jest --coverage --coverageReporters=html --coverageReporters=text-summary",
    "test:fix": "jest --passWithNoTests --verbose",
    "test:validate": "jest --passWithNoTests --verbose --testPathPattern=src/__tests__/comprehensive"
  },
  "dependencies": {
    "@emotion/react": "^11.11.3",
    "@emotion/styled": "^11.11.0",
    "@fontsource/roboto": "^5.0.8",
    "@mui/icons-material": "^5.16.7",
    "@mui/material": "^5.15.11",
    "@mui/styled-engine-sc": "^6.0.0-alpha.17",
    "framer-motion": "^11.0.5",
    "lucide-react": "^0.539.0",
    "react": "^18.2.0",
    "react-dnd": "^16.0.1",
    "react-dnd-html5-backend": "^16.0.1",
    "react-dom": "^18.2.0",
    "react-fast-marquee": "^1.6.4",
    "react-heart": "^1.0.6",
    "react-icons": "^5.0.1",
    "react-router-dom": "^6.21.3",
    "styled-components": "^6.1.8"
  },
  "devDependencies": {
    "@babel/core": "^7.23.9",
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-react": "^7.27.1",
    "@testing-library/jest-dom": "^6.7.0",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/graceful-fs": "^4.1.9",
    "@types/jest": "^29.5.11",
    "@types/jest-axe": "^3.5.9",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "antd": "^5.14.2",
    "autoprefixer": "^10.4.17",
    "babel-jest": "^30.0.5",
    "esbuild": "^0.25.9",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "graceful-fs": "^4.2.11",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-axe": "^10.0.0",
    "jest-dom": "^4.0.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-html-reporters": "^3.1.7",
    "jest-matchmedia-mock": "^1.1.0",
    "node-fetch": "^2.7.0",
    "postcss": "^8.4.33",
    "tailwindcss": "^3.4.1",
    "ts-jest": "^29.1.2",
    "typescript": "^5.2.2",
    "vite": "^4.5.2"
  },
  "overrides": {
    "esbuild": "^0.25.9"
  }
}
